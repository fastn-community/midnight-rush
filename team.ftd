-- component member:
string profile:
caption title:
body body:
boolean $hover: false
ftd.image-src image:

-- ftd.column:
background.solid: $inherited.colors.background.base
border-radius.px: 20
width.fixed.percent: 30
width if { ftd.device == "mobile" }: fill-container
border-color: $inherited.colors.border
border-width.px: 1
$on-mouse-enter$: $ftd.set-bool($a = $member.hover, v = true)
$on-mouse-leave$: $ftd.set-bool($a = $member.hover, v = false)
border-color if { member.hover } : $inherited.colors.border-strong

-- ftd.image:
src: $member.image
width: fill-container
max-height.fixed.px: 358
border-radius.px: 20

-- ftd.text: $member.profile
background.solid: $inherited.colors.background.step-1
border-radius.px: 20
anchor: parent
top.px: 20
right.px: 20
padding-vertical.px: 4
padding-horizontal.px: 16
color: $inherited.colors.text-strong
role: $inherited.types.fine-print

-- ftd.column:
padding-horizontal.px: 32
padding-top.px: 34
padding-bottom.px: 48
width: fill-container
spacing.fixed.px: 8

-- ftd.text: $member.title
role: $inherited.types.heading-small
color: $inherited.colors.text
color if { member.hover }: $inherited.colors.text-strong
border-radius.px: 20
style: medium

-- ftd.text:
role: $inherited.types.copy-regular
color: $inherited.colors.text

$member.body

-- end: ftd.column

-- end: ftd.column

-- end: member
